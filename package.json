{
  "name": "ski2-js-tests",
  "version": "0.1.0",
  "description": "JavaScript testing suite for Ski! 3D Alpine Ski Terrain Rendering System",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --apply .",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "install:e2e": "npx playwright install",
    "prepare": "lefthook install",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.40.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "canvas": "^2.11.2",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.1",
    "three": "^0.158.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/js/$1"
    },
    "testMatch": [
      "<rootDir>/tests/js/unit/**/*.test.js",
      "<rootDir>/tests/js/integration/**/*.test.js",
      "<rootDir>/tests/js/performance/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.min.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true
  },
  "keywords": [
    "ski",
    "terrain",
    "3d-rendering",
    "webgl",
    "testing",
    "jest"
  ],
  "author": "Ski Terrain Rendering Team",
  "license": "MIT"
}
